<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>AWS Security Posture Report â€” {{ data.scan_metadata.account_id }}</title>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/4.4.0/chart.umd.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/d3/7.8.5/d3.min.js"></script>
  <style>
    :root {
      --bg: #0f1117;
      --card: #1a1d27;
      --border: #2a2d3e;
      --text: #e2e8f0;
      --muted: #94a3b8;
      --accent: #6366f1;
      --critical: #ef4444;
      --high: #f97316;
      --medium: #eab308;
      --low: #22c55e;
      --pass: #22c55e;
      --fail: #ef4444;
    }
    * { box-sizing: border-box; margin: 0; padding: 0; }
    body { background: var(--bg); color: var(--text); font-family: 'Segoe UI', system-ui, sans-serif; font-size: 14px; line-height: 1.6; }
    a { color: var(--accent); text-decoration: none; }

    /* Layout */
    .container { max-width: 1300px; margin: 0 auto; padding: 24px; }
    .header { display: flex; align-items: center; justify-content: space-between; padding: 20px 24px; background: var(--card); border-bottom: 1px solid var(--border); margin-bottom: 24px; border-radius: 12px; }
    .header h1 { font-size: 22px; font-weight: 700; }
    .header .meta { color: var(--muted); font-size: 12px; text-align: right; }
    .grid-4 { display: grid; grid-template-columns: repeat(4, 1fr); gap: 16px; margin-bottom: 24px; }
    .grid-3 { display: grid; grid-template-columns: repeat(3, 1fr); gap: 16px; margin-bottom: 24px; }
    .grid-2 { display: grid; grid-template-columns: 1fr 1fr; gap: 16px; margin-bottom: 24px; }

    /* Cards */
    .card { background: var(--card); border: 1px solid var(--border); border-radius: 12px; padding: 20px; }
    .card h2 { font-size: 13px; font-weight: 600; color: var(--muted); text-transform: uppercase; letter-spacing: .05em; margin-bottom: 12px; }
    .stat-value { font-size: 36px; font-weight: 800; line-height: 1; }
    .stat-label { font-size: 12px; color: var(--muted); margin-top: 4px; }

    /* Severity colors */
    .critical { color: var(--critical); }
    .high { color: var(--high); }
    .medium { color: var(--medium); }
    .low { color: var(--low); }
    .badge { display: inline-block; padding: 2px 10px; border-radius: 99px; font-size: 11px; font-weight: 700; letter-spacing: .04em; }
    .badge-critical { background: rgba(239,68,68,.15); color: var(--critical); }
    .badge-high { background: rgba(249,115,22,.15); color: var(--high); }
    .badge-medium { background: rgba(234,179,8,.15); color: var(--medium); }
    .badge-low { background: rgba(34,197,94,.15); color: var(--low); }
    .badge-pass { background: rgba(34,197,94,.15); color: var(--pass); }
    .badge-fail { background: rgba(239,68,68,.15); color: var(--fail); }

    /* Score gauge */
    .score-wrap { display: flex; align-items: center; gap: 20px; }
    .score-number { font-size: 56px; font-weight: 900; line-height: 1; }
    .score-detail { font-size: 12px; color: var(--muted); }
    .score-detail span { display: block; margin-top: 4px; }
    .score-good { color: var(--low); }
    .score-ok { color: var(--medium); }
    .score-bad { color: var(--critical); }

    /* Progress bar */
    .progress { background: var(--border); border-radius: 99px; height: 8px; overflow: hidden; margin-top: 12px; }
    .progress-fill { height: 100%; border-radius: 99px; transition: width .6s ease; }
    .fill-good { background: var(--low); }
    .fill-ok { background: var(--medium); }
    .fill-bad { background: var(--critical); }

    /* Charts */
    .chart-container { position: relative; height: 220px; }

    /* Table */
    .table-wrap { overflow-x: auto; border-radius: 12px; border: 1px solid var(--border); margin-bottom: 24px; }
    table { width: 100%; border-collapse: collapse; }
    thead th { background: var(--card); padding: 12px 16px; text-align: left; font-size: 11px; font-weight: 600; color: var(--muted); text-transform: uppercase; letter-spacing: .05em; border-bottom: 1px solid var(--border); white-space: nowrap; }
    tbody tr { border-bottom: 1px solid var(--border); transition: background .15s; }
    tbody tr:last-child { border-bottom: none; }
    tbody tr:hover { background: rgba(255,255,255,.03); }
    tbody td { padding: 12px 16px; font-size: 13px; vertical-align: top; }
    .resource-cell { font-family: monospace; font-size: 12px; color: var(--muted); max-width: 200px; word-break: break-all; }
    .issue-cell { max-width: 280px; }
    .remediation-cell { max-width: 240px; color: var(--muted); font-size: 12px; }

    /* Expandable row */
    details summary { cursor: pointer; list-style: none; }
    details summary::marker { display: none; }
    details summary::-webkit-details-marker { display: none; }
    .cli-code { background: #0d1117; border: 1px solid var(--border); border-radius: 8px; padding: 10px 14px; font-family: monospace; font-size: 12px; color: #7dd3fc; margin-top: 8px; white-space: pre-wrap; word-break: break-all; }

    /* Filters */
    .filters { display: flex; gap: 10px; align-items: center; flex-wrap: wrap; margin-bottom: 16px; }
    .filters label { font-size: 12px; color: var(--muted); }
    select, input[type="search"] { background: var(--card); border: 1px solid var(--border); border-radius: 8px; color: var(--text); padding: 6px 12px; font-size: 13px; outline: none; }
    select:focus, input:focus { border-color: var(--accent); }
    .btn { display: inline-flex; align-items: center; gap: 6px; background: var(--accent); color: #fff; border: none; border-radius: 8px; padding: 7px 16px; font-size: 13px; font-weight: 600; cursor: pointer; }
    .btn:hover { opacity: .85; }

    /* Compliance table */
    .compliance-section { margin-bottom: 24px; }
    .section-title { font-size: 16px; font-weight: 700; margin-bottom: 16px; padding-bottom: 8px; border-bottom: 1px solid var(--border); }
    .control-row { display: flex; align-items: flex-start; gap: 12px; padding: 10px 0; border-bottom: 1px solid var(--border); }
    .control-row:last-child { border-bottom: none; }
    .control-id { font-family: monospace; font-size: 12px; min-width: 60px; color: var(--muted); padding-top: 2px; }
    .control-info { flex: 1; }
    .control-title { font-size: 13px; }
    .control-section { font-size: 11px; color: var(--muted); }
    .control-findings { margin-top: 6px; display: flex; flex-wrap: wrap; gap: 4px; }
    .finding-ref { font-size: 11px; background: rgba(239,68,68,.1); color: var(--critical); border-radius: 4px; padding: 1px 6px; font-family: monospace; }

    footer { text-align: center; color: var(--muted); font-size: 12px; padding: 24px 0; border-top: 1px solid var(--border); margin-top: 24px; }
  </style>
</head>
<body>
<div class="container">

  <!-- Header -->
  <div class="header">
    <div>
      <h1>ðŸ”’ AWS Security Posture Report</h1>
      <div style="color:var(--muted);font-size:12px;margin-top:4px;">{{ data.compliance.framework }}</div>
    </div>
    <div class="meta">
      <div>Account: <strong>{{ data.scan_metadata.account_id }}</strong></div>
      <div>Region: {{ data.scan_metadata.region }}</div>
      <div>Scanned: {{ data.scan_metadata.scan_time[:19].replace('T',' ') }} UTC</div>
      {% if data.scan_metadata.scan_duration_seconds %}
      <div>Duration: {{ data.scan_metadata.scan_duration_seconds }}s</div>
      {% endif %}
    </div>
  </div>

  <!-- KPI row -->
  {% set stats = data.statistics %}
  {% set comp = data.compliance %}
  {% set score = comp.score %}
  {% set score_class = "score-good" if score >= 80 else ("score-ok" if score >= 60 else "score-bad") %}
  {% set fill_class = "fill-good" if score >= 80 else ("fill-ok" if score >= 60 else "fill-bad") %}

  <div class="grid-4">
    <div class="card">
      <h2>Total Findings</h2>
      <div class="stat-value">{{ stats.total_findings }}</div>
      <div class="stat-label">across {{ data.scan_metadata.services_scanned | length }} services</div>
    </div>
    <div class="card">
      <h2>Critical / High</h2>
      <div class="stat-value critical">{{ stats.by_severity.CRITICAL }}</div>
      <div class="stat-label">
        + <span class="high">{{ stats.by_severity.HIGH }}</span> High
      </div>
    </div>
    <div class="card">
      <h2>Medium / Low</h2>
      <div class="stat-value medium">{{ stats.by_severity.MEDIUM }}</div>
      <div class="stat-label">
        + <span class="low">{{ stats.by_severity.LOW }}</span> Low
      </div>
    </div>
    <div class="card">
      <h2>CIS Compliance</h2>
      <div class="score-wrap">
        <div class="stat-value {{ score_class }}">{{ score }}%</div>
        <div class="score-detail">
          <span>{{ comp.controls_passed }} / {{ comp.controls_total }} controls</span>
          <span style="color:var(--critical)">{{ comp.controls_failed }} failed</span>
        </div>
      </div>
      <div class="progress">
        <div class="progress-fill {{ fill_class }}" style="width:{{ score }}%"></div>
      </div>
    </div>
  </div>

  <!-- Charts row -->
  <div class="grid-2">
    <div class="card">
      <h2>Findings by Severity</h2>
      <div class="chart-container">
        <canvas id="severityChart"></canvas>
      </div>
    </div>
    <div class="card">
      <h2>Findings by Service</h2>
      <div class="chart-container">
        <canvas id="serviceChart"></canvas>
      </div>
    </div>
  </div>

  <!-- Findings table -->
  <div class="section-title">All Findings ({{ stats.total_findings }})</div>

  <div class="filters">
    <label>Severity:</label>
    <select id="sev-filter" onchange="filterTable()">
      <option value="">All</option>
      <option value="CRITICAL">Critical</option>
      <option value="HIGH">High</option>
      <option value="MEDIUM">Medium</option>
      <option value="LOW">Low</option>
    </select>
    <label>Service:</label>
    <select id="svc-filter" onchange="filterTable()">
      <option value="">All</option>
      {% for svc in data.statistics.by_service.keys() %}
      <option value="{{ svc }}">{{ svc }}</option>
      {% endfor %}
    </select>
    <input type="search" id="search-box" placeholder="Searchâ€¦" oninput="filterTable()" />
    <button class="btn" onclick="exportCSV()">â¬‡ Export CSV</button>
  </div>

  <div class="table-wrap">
    <table id="findings-table">
      <thead>
        <tr>
          <th>#</th>
          <th>Risk â–¾</th>
          <th>Severity</th>
          <th>Service</th>
          <th>Resource</th>
          <th>Issue</th>
          <th>CIS Control</th>
          <th>Remediation</th>
        </tr>
      </thead>
      <tbody>
        {% for f in data.findings %}
        {% set sev_lower = f.severity | lower %}
        {% set rs = f.risk_score if f.risk_score is defined else 0 %}
        <tr data-severity="{{ f.severity }}" data-service="{{ f.service }}">
          <td style="color:var(--muted);font-size:11px">{{ loop.index }}</td>
          <td><b style="font-size:14px;color:{% if rs >= 8 %}var(--critical){% elif rs >= 6 %}var(--high){% elif rs >= 4 %}var(--medium){% else %}var(--low){% endif %}">{{ "%.1f"|format(rs) }}</b></td>
          <td><span class="badge badge-{{ sev_lower }}">{{ f.severity }}</span></td>
          <td><span style="font-size:12px">{{ f.service }}</span></td>
          <td class="resource-cell">{{ f.resource }}</td>
          <td class="issue-cell">
            <details>
              <summary>{{ f.issue }}</summary>
              <div style="margin-top:8px;font-size:12px;color:var(--muted)">{{ f.description }}</div>
              {% if f.remediation_cli %}
              <div class="cli-code">{{ f.remediation_cli }}</div>
              {% endif %}
            </details>
          </td>
          <td style="font-family:monospace;font-size:12px;color:var(--accent)">{{ f.cis_control }}</td>
          <td class="remediation-cell">{{ f.remediation }}</td>
        </tr>
        {% else %}
        <tr><td colspan="7" style="text-align:center;color:var(--low);padding:32px">âœ… No findings â€” great job!</td></tr>
        {% endfor %}
      </tbody>
    </table>
  </div>

  <!-- Multi-framework scores -->
  {% set fws = data.compliance.frameworks if data.compliance.frameworks is defined else {} %}
  {% if fws %}
  <div class="section-title">Compliance Framework Scores</div>
  <div class="grid-{{ fws | length }}" style="grid-template-columns: repeat({{ fws | length }}, 1fr); margin-bottom:24px">
    {% for key, fw in fws.items() %}
    {% set fc = "score-good" if fw.score >= 80 else ("score-ok" if fw.score >= 60 else "score-bad") %}
    {% set ffc = "fill-good" if fw.score >= 80 else ("fill-ok" if fw.score >= 60 else "fill-bad") %}
    <div class="card">
      <h2>{{ fw.framework }}</h2>
      <div class="score-wrap">
        <div class="stat-value {{ fc }}">{{ fw.score }}%</div>
        <div class="score-detail">
          <span>{{ fw.controls_passed }} / {{ fw.controls_total }}</span>
          <span style="color:var(--critical)">{{ fw.controls_failed }} failed</span>
        </div>
      </div>
      <div class="progress"><div class="progress-fill {{ ffc }}" style="width:{{ fw.score }}%"></div></div>
    </div>
    {% endfor %}
  </div>
  {% endif %}

  <!-- Attack graph -->
  {% if data.graph_data and data.graph_data.nodes %}
  <div class="section-title">Infrastructure Attack Graph</div>
  <div class="card" style="margin-bottom:24px">
    <div style="display:flex;gap:14px;align-items:center;margin-bottom:12px;font-size:12px;flex-wrap:wrap">
      <span style="width:12px;height:12px;border-radius:50%;background:#f59e0b;display:inline-block"></span> S3
      <span style="width:12px;height:12px;border-radius:50%;background:#6366f1;display:inline-block"></span> IAM
      <span style="width:12px;height:12px;border-radius:50%;background:#10b981;display:inline-block"></span> EC2
      <span style="width:12px;height:12px;border-radius:50%;background:#3b82f6;display:inline-block"></span> RDS
      <span style="width:24px;height:3px;background:#ef4444;display:inline-block;border-radius:2px"></span> Attack path
      <span style="width:24px;height:1px;background:#94a3b8;display:inline-block"></span> Relationship
      <span style="margin-left:auto;color:var(--muted)">
        {{ data.graph_data.stats.total_nodes }} nodes Â· {{ data.graph_data.stats.total_edges }} edges Â· {{ data.graph_data.stats.attack_path_count }} attack path(s)
      </span>
    </div>
    <svg id="attack-graph-svg" style="width:100%;height:500px;background:#0d1117;border-radius:8px;border:1px solid var(--border)"></svg>
    {% if data.attack_paths %}
    <div style="margin-top:16px">
      <div style="font-size:13px;font-weight:700;margin-bottom:10px;color:var(--critical)">âš  {{ data.attack_paths | length }} Exploitable Attack Chain(s) Detected</div>
      {% for path in data.attack_paths[:5] %}
      <div style="background:#0d1117;border:1px solid var(--border);border-radius:8px;padding:12px;margin-bottom:10px">
        <div style="display:flex;justify-content:space-between;margin-bottom:6px">
          <b style="font-size:13px">Path {{ loop.index }}: {{ path.entry_point[:35] }} â†’ {{ path.target[:35] }}</b>
          <span style="font-weight:700;color:{% if path.risk_score >= 8 %}var(--critical){% elif path.risk_score >= 6 %}var(--high){% else %}var(--medium){% endif %}">Risk {{ "%.1f"|format(path.risk_score) }}</span>
        </div>
        {% for step in path.attack_steps %}
        <div style="font-size:12px;color:var(--muted);margin-bottom:2px">â€¢ {{ step }}</div>
        {% endfor %}
      </div>
      {% endfor %}
    </div>
    {% endif %}
  </div>
  {% endif %}

  <!-- CIS Compliance breakdown -->
  <div class="compliance-section">
    <div class="section-title">CIS Benchmark â€” Failed Controls ({{ comp.controls_failed }})</div>
    <div class="card">
      {% for ctrl in comp.failed_controls %}
      <div class="control-row">
        <div class="control-id">{{ ctrl.id }}</div>
        <div class="control-info">
          <div class="control-title">{{ ctrl.title }}</div>
          <div class="control-section">{{ ctrl.section }}</div>
          <div class="control-findings">
            {% for f in ctrl.findings %}
            <span class="finding-ref badge badge-{{ f.severity | lower }}">{{ f.severity }} â€” {{ f.resource[:40] }}</span>
            {% endfor %}
          </div>
        </div>
        <div><span class="badge badge-fail">FAIL</span></div>
      </div>
      {% else %}
      <div style="color:var(--low);text-align:center;padding:20px">ðŸŽ‰ All controls passed!</div>
      {% endfor %}
    </div>
  </div>

  <div class="compliance-section">
    <div class="section-title">CIS Benchmark â€” Passed Controls ({{ comp.controls_passed }})</div>
    <div class="card">
      {% for ctrl in comp.passed_controls %}
      <div class="control-row">
        <div class="control-id">{{ ctrl.id }}</div>
        <div class="control-info">
          <div class="control-title">{{ ctrl.title }}</div>
          <div class="control-section">{{ ctrl.section }}</div>
        </div>
        <div><span class="badge badge-pass">PASS</span></div>
      </div>
      {% endfor %}
    </div>
  </div>

  <footer>
    Generated by AWS Security Posture Scanner â€¢
    {{ data.scan_metadata.scan_time[:10] }} â€¢
    Account {{ data.scan_metadata.account_id }}
  </footer>
</div>

<script>
// â”€â”€ Chart data â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
const sevData = {
  labels: ['Critical', 'High', 'Medium', 'Low'],
  datasets: [{
    data: [
      {{ stats.by_severity.CRITICAL }},
      {{ stats.by_severity.HIGH }},
      {{ stats.by_severity.MEDIUM }},
      {{ stats.by_severity.LOW }}
    ],
    backgroundColor: ['#ef4444','#f97316','#eab308','#22c55e'],
    borderWidth: 0,
  }]
};

const svcLabels = [{% for k in data.statistics.by_service.keys() %}'{{ k }}',{% endfor %}];
const svcValues = [{% for v in data.statistics.by_service.values() %}{{ v }},{% endfor %}];

const chartDefaults = {
  responsive: true,
  maintainAspectRatio: false,
  plugins: { legend: { labels: { color: '#94a3b8', boxWidth: 12 } } },
};

new Chart(document.getElementById('severityChart'), {
  type: 'doughnut',
  data: sevData,
  options: { ...chartDefaults, cutout: '60%' }
});

new Chart(document.getElementById('serviceChart'), {
  type: 'bar',
  data: {
    labels: svcLabels,
    datasets: [{
      label: 'Findings',
      data: svcValues,
      backgroundColor: '#6366f1',
      borderRadius: 6,
      borderWidth: 0,
    }]
  },
  options: {
    ...chartDefaults,
    scales: {
      x: { ticks: { color: '#94a3b8' }, grid: { color: '#2a2d3e' } },
      y: { ticks: { color: '#94a3b8' }, grid: { color: '#2a2d3e' } }
    },
    plugins: { legend: { display: false } }
  }
});

// â”€â”€ Filtering â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
function filterTable() {
  const sev = document.getElementById('sev-filter').value.toLowerCase();
  const svc = document.getElementById('svc-filter').value.toLowerCase();
  const q = document.getElementById('search-box').value.toLowerCase();
  document.querySelectorAll('#findings-table tbody tr').forEach(row => {
    const rowSev = (row.dataset.severity || '').toLowerCase();
    const rowSvc = (row.dataset.service || '').toLowerCase();
    const text = row.textContent.toLowerCase();
    const show = (!sev || rowSev === sev) && (!svc || rowSvc === svc) && (!q || text.includes(q));
    row.style.display = show ? '' : 'none';
  });
}

// â”€â”€ D3.js Attack Graph â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
(function() {
  const graphData = {{ data.graph_data | tojson if data.graph_data else '{"nodes":[],"links":[]}' }};
  if (!graphData.nodes || !graphData.nodes.length) return;

  const svgEl = document.getElementById('attack-graph-svg');
  if (!svgEl) return;
  const W = svgEl.clientWidth || 900, H = 500;

  const color = t => ({ S3:'#f59e0b', IAM:'#6366f1', EC2:'#10b981', RDS:'#3b82f6',
    VPC:'#8b5cf6', CloudTrail:'#06b6d4', EKS:'#ec4899', SecretsManager:'#f43f5e' }[t] || '#94a3b8');

  const svg = d3.select(svgEl).attr('viewBox', `0 0 ${W} ${H}`);

  const sim = d3.forceSimulation(graphData.nodes)
    .force('link', d3.forceLink(graphData.links).id(d => d.id).distance(140))
    .force('charge', d3.forceManyBody().strength(-400))
    .force('center', d3.forceCenter(W/2, H/2))
    .force('collision', d3.forceCollide(28));

  const link = svg.append('g').selectAll('line').data(graphData.links).join('line')
    .attr('stroke', d => d.is_attack_path || d.attack_type ? '#ef4444' : '#2a2d3e')
    .attr('stroke-width', d => d.is_attack_path || d.attack_type ? 2.5 : 1)
    .attr('stroke-dasharray', d => d.attack_type ? '5,3' : '');

  const drag = d3.drag()
    .on('start', (e,d) => { if(!e.active) sim.alphaTarget(0.3).restart(); d.fx=d.x; d.fy=d.y; })
    .on('drag', (e,d) => { d.fx=e.x; d.fy=e.y; })
    .on('end', (e,d) => { if(!e.active) sim.alphaTarget(0); d.fx=null; d.fy=null; });

  const node = svg.append('g').selectAll('circle').data(graphData.nodes).join('circle')
    .attr('r', d => d.public_exposure ? 16 : d.sensitive ? 14 : 10)
    .attr('fill', d => color(d.type))
    .attr('stroke', d => d.public_exposure ? '#ef4444' : 'transparent')
    .attr('stroke-width', 2)
    .call(drag);
  node.append('title').text(d => `[${d.type}] ${d.id}`);

  const label = svg.append('g').selectAll('text').data(graphData.nodes).join('text')
    .text(d => (d.label||d.id).slice(0,18))
    .attr('font-size', 10).attr('fill', '#94a3b8').attr('pointer-events','none');

  sim.on('tick', () => {
    link.attr('x1',d=>d.source.x).attr('y1',d=>d.source.y).attr('x2',d=>d.target.x).attr('y2',d=>d.target.y);
    node.attr('cx',d=>d.x).attr('cy',d=>d.y);
    label.attr('x',d=>d.x+14).attr('y',d=>d.y+4);
  });
})();
function exportCSV() {
  const rows = [['ID','Severity','Service','Resource','Issue','CIS Control','Remediation']];
  document.querySelectorAll('#findings-table tbody tr').forEach(row => {
    if (row.style.display === 'none') return;
    const cells = row.querySelectorAll('td');
    rows.push([
      cells[0]?.textContent.trim(),
      cells[1]?.textContent.trim(),
      cells[2]?.textContent.trim(),
      cells[3]?.textContent.trim(),
      cells[4]?.querySelector('summary')?.textContent.trim() || cells[4]?.textContent.trim(),
      cells[5]?.textContent.trim(),
      cells[6]?.textContent.trim(),
    ].map(v => '"' + (v||'').replace(/"/g,'""') + '"'));
  });
  const blob = new Blob([rows.map(r=>r.join(',')).join('\n')], {type:'text/csv'});
  const a = document.createElement('a');
  a.href = URL.createObjectURL(blob);
  a.download = 'aws-security-findings.csv';
  a.click();
}
